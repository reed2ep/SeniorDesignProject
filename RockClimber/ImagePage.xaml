<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RockClimber.ImagePage"
             Title="ImagePage">
    <VerticalStackLayout Padding="10">
        <Label Text="Selected Image" FontSize="24" HorizontalOptions="Center" />
        <Image x:Name="SelectedImage" Aspect="AspectFit" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
    </VerticalStackLayout>
</ContentPage>