<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RockClimber.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Label
                Text="RockClimber"
                FontSize="32"
                HorizontalOptions="Center" 
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Welcome to the testing app!"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to the testing app!" />

            <Button
                Text="Go to Profile" 
                Clicked="OnGoToProfileClicked"
                HorizontalOptions="Fill" />

            <Button 
                Text="Go To Camera"
                Clicked="OnGoToCameraPageClicked"
                HorizontalOptions="Center"/>

            <Button
                Text="Open Gallery"
                Clicked="OnOpenGalleryClicked"
                HorizontalOptions="Center" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
