<Shell
    x:Class="RockClimber.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RockClimber"
    Shell.FlyoutBehavior="Disabled"
    Title="RockClimber">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <Shell.ToolbarItems>
        <ToolbarItem 
            Text="Help"
            IconImageSource="logo4.png" 
            Order="Primary" 
            Priority="0"
            Clicked="OnHelpClicked"/>
    </Shell.ToolbarItems>

</Shell>
