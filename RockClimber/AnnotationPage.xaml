<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RockClimber.AnnotationPage"
             Title="AnnotationPage">

    <VerticalStackLayout Padding="20">
        <!-- Image to display the processed image -->
        <Image x:Name="CapturedImage" 
               WidthRequest="300" 
               HeightRequest="300" 
               Aspect="AspectFit" 
               HorizontalOptions="Center" />

        <!-- Holds Dropdown -->
        <Label Text="Select Hold to Edit:" FontAttributes="Bold" />
        <Picker x:Name="HoldsPicker" Title="Select Hold" />

        <!-- Hold Type Dropdown -->
        <Label Text="Select or Change Hold Type:" FontAttributes="Bold" />
        <Picker x:Name="HoldTypePicker" Title="Select Hold Type" />

        <!-- Start Hold Dropdowns for Two-Hand Start -->
        <Label Text="Select Start1 Hold:" FontAttributes="Bold" />
        <Picker x:Name="StartHoldPicker" Title="Select Left Start Hold" />

        <Label Text="Select Start2 Hold:" FontAttributes="Bold" />
        <Picker x:Name="SecondStartHoldPicker" Title="Select Right Start Hold" />

        <!-- End Hold Dropdown -->
        <Label Text="Select End Hold:" FontAttributes="Bold" />
        <Picker x:Name="EndHoldPicker" Title="Select End Hold" />

        <!-- Continue Button -->
        <Button Text="Continue to Next Step" Clicked="OnContinueClicked" />
    </VerticalStackLayout>
</ContentPage>
